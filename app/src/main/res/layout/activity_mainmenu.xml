<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.khamalganteng.uplace.Mainmenu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="113dp"
        android:layout_height="124dp"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView1"
        android:layout_marginTop="37dp"
        android:onClick="klikDana"
        android:tint="@drawable/mmtintitem"
        app:srcCompat="@drawable/ic_money" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="113dp"
        android:layout_height="124dp"

        android:layout_alignStart="@+id/imageView4"
        android:layout_alignTop="@+id/imageView"
        android:onClick="klikForum"
        android:tint="@drawable/mmtintitem"
        app:srcCompat="@drawable/ic_forum" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="112dp"
        android:layout_height="125dp"


        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp"
        android:onClick="klikBerita"
        android:tint="@drawable/mmtintitem"
        app:srcCompat="@drawable/ic_news" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="113dp"
        android:layout_height="126dp"

        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="54dp"
        android:onClick="klikCari"
        android:tint="@drawable/mmtintitem"
        app:srcCompat="@drawable/ic_search_black_24dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_below="@+id/imageView"
        android:gravity="center"
        android:text="Dana saya"
        android:tint="@drawable/mmtintitem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/imageView4"
        android:gravity="center"
        android:text="Pencarian"
        android:tint="@drawable/mmtintitem" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignStart="@id/imageView3"
        android:layout_below="@+id/imageView3"
        android:gravity="center"
        android:text="Berita UMKM"
        android:tint="@drawable/mmtintitem" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@+id/textView1"
        android:layout_alignEnd="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:gravity="center"
        android:text="Forum"
        android:tint="@drawable/mmtintitem"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="25dp"
        android:tint="@drawable/mmtintitem"
        app:srcCompat="@drawable/ic_account" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="113dp"
        android:layout_height="113dp"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/imageView6"
        android:onClick="klikBarang"
        android:tint="@drawable/mmtintitem"
        app:srcCompat="@drawable/ic_content_paste" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/imageView6"
        android:gravity="center"
        android:text="Profil" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7"
        android:layout_below="@+id/imageView6"
        android:gravity="center"
        android:text="Atur Barang" />
</RelativeLayout>
